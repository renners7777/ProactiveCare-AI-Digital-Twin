{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "common/*": ["../../packages/common/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "App.tsx"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
